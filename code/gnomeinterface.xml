<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="system" method="upgrade">
	<name>plg_system_gnomeinterface</name>
	<author>Jeremy Wilken - Gnome on the run</author>
	<creationDate>September 2011</creationDate>
	<copyright>Copyright (C) 2011 Gnome on the run. All rights reserved.</copyright>
	<license>GNU General Public License v3</license>
	<authorEmail>gnomation@gnomeontherun.com</authorEmail>
	<authorUrl>www.gnomeontherun.com</authorUrl>
	<version>1.1</version>
	<description>PLG_SYSTEM_GNOMEINTERFACE_DESC</description>
	<files>
		<filename plugin="gnomeinterface">gnomeinterface.php</filename>
		<filename>index.html</filename>
		<folder>fields</folder>
	</files>
	<languages folder="language">
		<language tag="el-GR">el-GR.plg_system_gnomeinterface.ini</language>
		<language tag="el-GR">el-GR.plg_system_gnomeinterface.sys.ini</language>

		<language tag="en-GB">en-GB.plg_system_gnomeinterface.ini</language>
		<language tag="en-GB">en-GB.plg_system_gnomeinterface.sys.ini</language>

		<!--<language tag="es-ES">es-ES.plg_system_gnomeinterface.ini</language>
		<language tag="es-ES">es-ES.plg_system_gnomeinterface.sys.ini</language>

		<language tag="nb-NO">nb-NO.plg_system_gnomeinterface.ini</language>
		<language tag="nb-NO">nb-NO.plg_system_gnomeinterface.sys.ini</language>

		<language tag="nl-NL">nl-NL.plg_system_gnomeinterface.ini</language>
		<language tag="nl-NL">nl-NL.plg_system_gnomeinterface.sys.ini</language>-->

		<language tag="pt-BR">pt-BR.plg_system_gnomeinterface.ini</language>
		<language tag="pt-BR">pt-BR.plg_system_gnomeinterface.sys.ini</language>

		<language tag="sv-SV">sv-SV.plg_system_gnomeinterface.ini</language>
		<language tag="sv-SV">sv-SV.plg_system_gnomeinterface.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/plugins/system/gnomeinterface/fields">
				<field name="content_editlayout" type="list" default="1" description="PLG_SYSTEM_GNOMEINTERFACE_CONTENTEDITLAYOUT_DESC" label="PLG_SYSTEM_GNOMEINTERFACE_CONTENTEDITLAYOUT">
					<option value="1">JEnabled</option>
					<option value="0">JDisabled</option>
				</field>
				<field name="filter_state" type="list" default="" description="PLG_SYSTEM_GNOMEINTERFACE_FILTERSTATE_DESC" label="PLG_SYSTEM_GNOMEINTERFACE_FILTERSTATE">
					<option value="">JOPTION_SELECT_PUBLISHED</option>
					<option value="1">JEnabled</option>
					<option value="0">JDisabled</option>
				</field>
				<field name="filter_type" type="list" default="" description="PLG_SYSTEM_GNOMEINTERFACE_DESC" label="PLG_SYSTEM_GNOMEINTERFACE_FILTERTYPE">
					<option value="">JOPTION_SELECT_PUBLISHED</option>
					<option value="user">PLG_SYSTEM_GNOMEINTERFACE_FILTERTYPE_USER</option>
					<option value="template">PLG_SYSTEM_GNOMEINTERFACE_FILTERTYPE_TEMPLATE</option>
				</field>
				<field name="filter_template" type="templates" default="" description="PLG_SYSTEM_GNOMEINTERFACE_FILTERTEMPLATE_DESC" label="PLG_SYSTEM_GNOMEINTERFACE_FILTERTEMPLATE" />
			</fieldset>
		</fields>
	</config>
</extension>
