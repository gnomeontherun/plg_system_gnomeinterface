	<version>1.0.2</version>
	<description>PLG_SYSTEM_MODPOSITION_DESC</description>
	<files>
		<filename plugin="modposition">modposition.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="el-GR">el-GR.plg_system_modposition.ini</language>
		<language tag="el-GR">el-GR.plg_system_modposition.sys.ini</language>
		<language tag="en-GB">en-GB.plg_system_modposition.ini</language>
		<language tag="en-GB">en-GB.plg_system_modposition.sys.ini</language>
		<language tag="sv-SV">sv-SV.plg_system_modposition.ini</language>
		<language tag="sv-SV">sv-SV.plg_system_modposition.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/plugins/system/modposition">
				<field name="filter_state" type="list" default="" description="PLG_SYSTEM_MODPOSITION_FILTERSTATE_DESC" label="PLG_SYSTEM_MODPOSITION_FILTERSTATE">
					<option value="">JOPTION_SELECT_PUBLISHED</option>
					<option value="1">JEnabled</option>
					<option value="0">JDisabled</option>
				</field>
				<field name="filter_type" type="list" default="" description="PLG_SYSTEM_MODPOSITION_FILTERTYPE_DESC" label="PLG_SYSTEM_MODPOSITION_FILTERTYPE">
					<option value="">JOPTION_SELECT_PUBLISHED</option>
					<option value="user">PLG_SYSTEM_MODPOSITION_FILTERTYPE_USER</option>
					<option value="template">PLG_SYSTEM_MODPOSITION_FILTERTYPE_TEMPLATE</option>
				</field>
				<field name="filter_template" type="templates" default="" description="PLG_SYSTEM_MODPOSITION_FILTERTEMPLATE_DESC" label="PLG_SYSTEM_MODPOSITION_FILTERTEMPLATE" />
			</fieldset>
		</fields>
	</config>
</extension>
